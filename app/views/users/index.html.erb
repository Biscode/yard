<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<%= render 'search' %>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <% if @task %>
        <td><%= link_to 'Add Task to User', {:controller => 'users', :action => 'add_task_to_user',:user_id => user.id, :task_id => @task} %></td>
        <% end %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
