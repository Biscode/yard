<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
 <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>

 <div class="field">
    <%= f.label :Gender %><br>
    <%= f.text_field :Gender %>
  </div>
 <div class="field">
    <%= f.label :projects %><br>
    <%= f.text_field :projects %>
  </div>
 <div class="field">
    <%= f.label :Achievments %><br>
    <%= f.text_field :Achievments %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
