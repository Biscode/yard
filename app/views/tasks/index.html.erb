<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<div class="right">
  <%= link_to 'New task', new_task_path, class: 'button small' %>
</div>

<div class="row">
  <%= link_to "All tasks", tasks_path %>
  <% task.task_categories.each do |c| %>
    <%= link_to c, tasks_path(category: c) %>
  <% end %>
</div>


<% @task.each do |post| %>
  <h4><small><i class="fa fa-calendar"></i> <%= post.created_at.strftime('%d %b %Y') %></small></h4>
  <h1><%= link_to task.title, task_path(task) %></h1>
<% end %>
