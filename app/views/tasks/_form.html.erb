<%= form_for([@project, @task]) do |f| %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</div>
<div class="field">
  <%= f.label :status %><br>
  <%= f.select :status, options_for_select(%w[New In-Progress Done]) %>
</div>
<div class="field">
  <%= f.label :priority %><br>
  <%= f.text_field :priority %>
</div>
<div class="field">
  <%= f.label :story_points %><br>
  <%= f.text_field :story_points %>
</div>
<div class="field">
  <%= f.label :deadline %><br>
  <%= f.date_select :deadline %>
</div>
<div class="field">
  <%= f.label :user_id %><br>
  <%= f.select :user_id, @project.users.map{ |user| [user.email, user.id] } , include_blank: true%>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
