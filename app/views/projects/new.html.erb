<% if !flash[:notice].blank? %>
	<div>
		<p><%= flash[:notice] %></p>
	</div>
	<% end %>


<div>
<h2>New Project</h2>

<%= form_for(:project, :url => {:action => 'create'}) do |f| %>
<table summary="putting a form in a table">
	<tr>
		<th>Title</th>
		<td><%= f.text_field(:title)%></td>
	</tr>
	<tr>
		<th>Description</th>
		<td><%= f.text_area(:description, :size =>"40x5") %></td>
	</tr>
	<tr>
		<th>Deadline</th>
		<td><%= f.text_field(:deadline) %></td>
	</tr>
	
</table>

<div>
	<%= submit_tag("Create Project") %>
</div>

<%end%>

</div>