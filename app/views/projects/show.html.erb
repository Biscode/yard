</div>
<% end %>

<%= link_to 'Edit', edit_project_path(@project) %>

<div class="row">
  <div class="sprint">
    <ul>
      <% @project.sprints.each do |sprint| %>
        <li>
          <a>
            <%= link_to sprint.number, project_sprint_path(@project, sprint) %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

