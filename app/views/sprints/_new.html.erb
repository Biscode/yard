<h1>New Sprint</h1>

<%= form_for([@project, @project.sprints.build]) do |f| %>

<div class="field">
  <%= f.label :number %><br>
  <%= f.text_field :number %>
</div>
<div class="field">
  <%= f.label :total_Points %><br>
  <%= f.text_field :total_points %>
</div>
<div class="field">
  <%= f.label :deadline %><br>
  <%= f.date_select :deadline %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
