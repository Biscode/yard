<script type="text/javascript">

function changeCSS()
{
    var id =document.getElementById("hidden");
    if (id.style.display == "none")
    {
      id.style.display = "block";
    }
    else
    {
      id.style.display = "none";
    }

}
</script>

<h4>New Sprint <input type='button' value='+' onclick = "changeCSS()"/></h4>

<div id="hidden" style="display:none">
  <%= form_for([@project, @project.sprints.build]) do |f| %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :total_Points %><br>
    <%= f.text_field :total_points %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.date_select :deadline %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
</div>
